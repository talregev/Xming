     LINTLIBS = $(LINTXLIB)

#include <Library.tmpl>

#define PassCDebugFlags

#if defined(LinuxArchitecture) && BuildXF86DRI
#define IHaveSubdirs

#if defined(i386Architecture) || defined(AMD64Architecture)
